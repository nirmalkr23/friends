<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">
                <div class="text-center">
                  <%= image_tag "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp", style: "width: 185px;", alt: "logo" %>
                  <h4 class="mt-1 mb-5 pb-1">We are The GRK Team</h4>
                </div>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
                  <p>Please login to your account</p>

                  <div class="form-outline mb-4">
                    <% form.label :email %><br />
                   <%= form.email_field :email, class:"form-control",placeholder:"Email",autofocus: true, autocomplete: "email" %>
                  </div>

                  <div class="form-outline mb-4">
                    <% form.label :password %><br />
                    <%= form.password_field :password, class:"form-control",placeholder:"Password",autocomplete: "current-password" %>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    
                    <%= form.button "Log in", class: "btn btn-primary btn-block fa-lg gradient-custom-2 mb-3", type: "submit" %>
                    <br>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot your password?", new_password_path(resource_name),class: "text-muted"  %><br />
                    <% end %>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    
                    <%- if devise_mapping.omniauthable? %>
                      <%- resource_class.omniauth_providers.each do |provider| %>
                        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
                        <% end %>
                    <% end %>
                  </div>

                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2">Don't have an account?</p>
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Create new", new_registration_path(resource_name), class: "btn btn-outline-danger", method: :get %><br />
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">We are more than just a company</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
